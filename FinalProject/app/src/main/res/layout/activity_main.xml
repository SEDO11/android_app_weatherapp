<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/weatherback">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/today_ic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/todayWeatherBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#000FFF"
            android:text="현재\n날씨"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/airBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#000FFF"
            android:text="황사\n정보"
            android:textSize="18dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/covidBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/airBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#000FFF"
            android:text="금일\n코로나"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/weekWeatherBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/todayWeatherBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000FFF"
            android:text="중기\n예보"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>
</LinearLayout>